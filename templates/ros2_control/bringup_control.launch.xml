<launch>
  <arg name="description_package"
       default="$DESCR_PKG_NAME$"
       description="Description package with robot URDF/xacro files. Usually not set, it enables use of a custom description."/>
  <arg name="description_file"
       default="$ROBOT_NAME$"
       description="URDF/XACRO description file (without extension) with the robot."/>
  <arg name="configuration_package"
       default="$RUNTIME_CONFIG_PKG_NAME$"
       description="The ROS package where we find the configuration files."/>
  <arg name="controllers_file"
       default="$ROBOT_NAME$_controllers.yaml"
       description="YAML file with the controllers configuration."/>
  <arg name="prefix"
       default=""
       description="Prefix of the joint names, useful for multi-robot setup. If changed than also joint names in the controllers' configuration have to be updated."/>
  <arg name="use_mock"
       default="true"
       description="Start robot with mock hardware mirroring command to its states."/>
  <arg name="start_rviz"
       default="true"
       description="Launch RViz visualization?"/>
  <arg name="controller_manager_name"
       default="controller_manager"
       description="Name of the controller manager node."/>
  <arg name="robot_ip"
       default="192.168.28.28"
       description="IP address of the robot controller."/>
  <arg name="robot_controller"
       default="joint_trajectory_controller"
       description="Robot controller to start.">
       <choice value="joint_trajectory_controller"/>
       <choice value="forward_position_controller"/>
  </arg>
  <arg name="inactive_robot_controller"
       default="forward_position_controller"
       description="Robot controller to start inactive.">
       <choice value="forward_position_controller"/>
       <choice value="joint_trajectory_controller"/>
  </arg>

  <include file="$(find-pkg-share $(var description_package))/launch/load_description.launch.xml">
    <arg name="description_package" value="$(var description_package)"/>
    <arg name="description_file" value="$(var description_file)"/>
    <arg name="prefix" value="$(var prefix)"/>
    <arg name="use_mock" value="$(var use_mock)"/>
    <arg name="robot_ip" value="$(var robot_ip)"/>
  </include>

  <!-- Doesn't work until fix releass, open from March 2026 -->
  <!-- <node pkg="controller_manager" exec="ros2_control_node" name="$(var controller_manager_name)" output="both"> -->
  <node pkg="controller_manager" exec="ros2_control_node" output="both">
    <param name="update_rate" value="100"/>
  </node>

  <let name="controllers_file_path" value="$(find-pkg-share $(var configuration_package))/config/$(var controllers_file)"/>

  <node pkg="controller_manager" exec="spawner" name="jsb_spawner" output="screen"
        args="joint_state_broadcaster -c $(var controller_manager_name) -p $(var controllers_file_path)"/>

  <node pkg="controller_manager" exec="spawner" name="robot_controller_spawner" output="screen"
        args="$(var robot_controller) -c $(var controller_manager_name) -p $(var controllers_file_path)"/>

  <node pkg="controller_manager" exec="spawner" name="inactive_robot_controller_spawner" output="screen"
        args="$(var inactive_robot_controller) --inactive -c $(var controller_manager_name) -p $(var controllers_file_path)"/>

  <node if="$(var start_rviz)" pkg="rviz2" exec="rviz2" name="rviz2" output="log"
        args="-d $(find-pkg-share $(var description_package))/rviz/$(var description_file).rviz"/>

</launch>
